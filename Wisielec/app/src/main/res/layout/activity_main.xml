<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.patrycja.wisielec.MainActivity"
    android:weightSum="8"
    android:background="#756e9e71">
    <!--ImageView gdzie pokazywany jest obrazek-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:id="@+id/imageView"
        android:src="@drawable/board14"/>
    <!-- LinearLayout gdzie znajduje się Button do losowania słowa
        oraz TextView gdzie wyświetlane jest ukryte słowo -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Losuj"
            android:id="@+id/button"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:textSize="20dip"
            android:textStyle="bold"
            android:backgroundTint="#149103" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/textView"
            android:textSize="27dip"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>
    <!-- TableLayout gdzie znajdują się przuyciski liter-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="4"
        android:id="@+id/table"
        android:visibility="invisible">
        <!-- TableRow 1 z przyciskami liter od A-Ę-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="8"
            android:id="@+id/row1">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A"
                android:id="@+id/a"
                android:layout_column="0"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ą"
                android:id="@+id/ą"
                android:layout_column="1"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B"
                android:id="@+id/b"
                android:layout_column="2"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C"
                android:id="@+id/c"
                android:layout_column="3"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ć"
                android:id="@+id/ć"
                android:layout_column="4"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="D"
                android:id="@+id/d"
                android:layout_column="5"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="E"
                android:id="@+id/e"
                android:layout_column="6"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ę"
                android:id="@+id/ę"
                android:layout_column="7"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>
        </TableRow>

        <!-- TableRow 2 z przyciskami liter od F-Ł-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="8"
            android:id="@+id/row2">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F"
                android:id="@+id/f"
                android:layout_column="0"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="G"
                android:id="@+id/g"
                android:layout_column="1"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="H"
                android:id="@+id/h"
                android:layout_column="2"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="I"
                android:id="@+id/i"
                android:layout_column="3"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="J"
                android:id="@+id/j"
                android:layout_column="4"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="K"
                android:id="@+id/k"
                android:layout_column="5"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="L"
                android:id="@+id/l"
                android:layout_column="6"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ł"
                android:id="@+id/ł"
                android:layout_column="7"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>
        </TableRow>

        <!-- TableRow 3 z przyciskami liter od M-S-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="8"
            android:id="@+id/row3">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="M"
                android:id="@+id/m"
                android:layout_column="0"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="N"
                android:id="@+id/n"
                android:layout_column="1"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ń"
                android:id="@+id/ń"
                android:layout_column="2"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="O"
                android:id="@+id/o"
                android:layout_column="3"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ó"
                android:id="@+id/ó"
                android:layout_column="4"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="P"
                android:id="@+id/p"
                android:layout_column="5"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R"
                android:id="@+id/r"
                android:layout_column="6"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S"
                android:id="@+id/s"
                android:layout_column="7"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>
        </TableRow>

        <!-- TableRow 4 z przyciskami liter od Ś-Ż-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="8"
            android:id="@+id/row4">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ś"
                android:id="@+id/ś"
                android:layout_column="0"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="T"
                android:id="@+id/t"
                android:layout_column="1"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="U"
                android:id="@+id/u"
                android:layout_column="2"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="W"
                android:id="@+id/w"
                android:layout_column="3"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y"
                android:id="@+id/y"
                android:layout_column="4"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Z"
                android:id="@+id/z"
                android:layout_column="5"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ź"
                android:id="@+id/ź"
                android:layout_column="6"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ż"
                android:id="@+id/ż"
                android:layout_column="7"
                android:onClick="onClick"
                android:backgroundTint="#149103"/>

        </TableRow>
    </TableLayout>
</LinearLayout>
