<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/grid_layout"
    android:background="@drawable/layout_border"
    android:padding="5dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingTop="0dp"
        android:id="@+id/grid_image"
        android:src="@drawable/ar3"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_border"
        android:id="@+id/grid_favorite"
        android:layout_alignRight="@id/grid_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_name"
        android:text="Name"
        android:textColor="@android:color/black"
        android:layout_below="@id/grid_image"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_price"
        android:text="Cena:"
        android:layout_below="@id/grid_name"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_gravity="center"/>
</RelativeLayout>