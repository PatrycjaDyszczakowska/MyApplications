package com.praca_inzynierska_server.app;

import java.io.File;
import java.util.*;

public class Semester {
	private Integer id;
	private String name;
	private List<List_of_reviews> List_reviews = new ArrayList<>();
	
	public Semester(Integer id, String name, String path) {
		this.id = id;
		this.name = name;
		try{
			Scanner s = new Scanner(new File(path+name+"/listofreview.txt"));
			while(s.hasNextLine()){
				createDeg(s.nextLine(),path+name+"/");
			}
			s.close();
		}catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	public Semester(Integer id, String name) {
		this.id = id;
		this.name = name;
	}
	
	public Integer getId() {
		return id;
	}
	
	public String getName() {
		return name;
	}
	
	public List<List_of_reviews> getAllListOfRev() {
		return List_reviews;
	}
	
	public List_of_reviews getListOfRev(Integer id) {
		return List_reviews.get(id);
	}
	
	private Course createCourse(String name, String path) {
		Course course = new Course(courses.size(),name.replace("+", " "),path);
		courses.add(courses.size(),course);
		return course;
	}
	
	public List_of_reviews createListOfRev(Integer id, String name) {
		List_of_reviews List_review = new List_of_reviews(id, name.replace("+", " "));
		List_reviews.add(id,List_review);
		return List_review;
	}
}
