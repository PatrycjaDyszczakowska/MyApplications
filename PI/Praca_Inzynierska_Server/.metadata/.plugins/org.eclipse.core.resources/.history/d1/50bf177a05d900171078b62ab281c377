package com.praca_inzynierska_server.app;

import java.io.File;
import java.util.*;

public class Specializations {
	private Integer id;
	private String name;
	private List<Degree> degs = new ArrayList<>();
	
	public Specializations(String name, String path) {
		this.name = name;
		try{
			Scanner s = new Scanner(new File(path+name+"/degree.txt"));
			while(s.hasNextLine()){
				createDeg(s.nextLine(),path+name+"/");
			}
			s.close();
		}catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	public Specializations(Integer id, String name) {
		this.id = id;
		this.name = name;
	}
	
	public Integer getId() {
		return id;
	}
	
	public String getName() {
		return name;
	}
	
	public List<Degree> getAllDeg() {
		return degs;
	}
	
	public Degree getDeg(Integer id) {
		return degs.get(id);
	}
	
	private Degree createDeg(String name, String path) {
		Degree deg = new Degree(name.replace("+", " "),path);
		degs.add(deg);
		return deg;
	}
	
	public Degree createDeg(Integer id, String name) {
		Degree deg = new Degree(id, name.replace("+", " "));
		degs.add(id,deg);
		return deg;
	}
	
	public Degree updateDeg(Integer idDeg, Integer idCourse, String name) {
		Degree deg = degs.get(idDeg);
		deg.createCourse(idCourse, name);
		return deg;
	}
	
	public Degree updateCourse(Integer idDeg, Integer idCourse, Integer idSemester, String name) {
		Degree deg = degs.get(idDeg);
		deg.updateCourse(idCourse, idSemester, name);
		return deg;
	}
	
	public Degree updateSemester(Integer idDeg, Integer idCourse, Integer idSemester, Integer idListOfRev, String name) {
		Degree deg = degs.get(idDeg);
		deg.updateSemester(idCourse, idSemester, idListOfRev, name);
		return deg;
	}
}
