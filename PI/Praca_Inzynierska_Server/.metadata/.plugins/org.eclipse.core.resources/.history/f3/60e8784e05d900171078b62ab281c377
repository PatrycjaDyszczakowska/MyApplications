package com.praca_inzynierska_server.app;

import java.io.File;
import java.util.*;

public class Departaments {
	
	private Integer id;
	private String name;
	private List<Specializations> specs = new ArrayList<>();
	
	public Departaments(String name, String path) {
		this.name = name;
		try{
			Scanner s = new Scanner(new File(path+name+"/specializations.txt"));
			while(s.hasNextLine()){
				createSpec(s.nextLine(),path+name+"/");
			}
			s.close();
		}catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	public Departaments(Integer id, String name) {
		this.id = id;
		this.name = name;
	}
	
	public Integer getId() {
		return id;
	}
	
	public String getName() {
		return name;
	}
	
	public List<Specializations> getAllSpec() {
		return specs;
	}
	
	public Specializations getSpec(Integer id) {
		return specs.get(id);
	}
	
	private Specializations createSpec(String name, String path) {
		Specializations spec = new Specializations(name.replace("+", " "),path);
		specs.add(spec);
		return spec;
	}
	
	public Specializations createSpec(Integer id, String name) {
		Specializations spec = new Specializations(id, name.replace("+", " "));
		specs.add(id,spec);
		return spec;
	}
	
	public Specializations updateSpec(Integer idSpec, Integer idDeg, String name) {
		Specializations spec = specs.get(idSpec);
		spec.createDeg(idDeg, name);
		return spec;
	}
	
	public Specializations updateDeg(Integer idSpec, Integer idDeg, Integer idCourse, String name) {
		Specializations spec = specs.get(idSpec);
		spec.updateDeg(idDeg, idCourse, name);
		return spec;
	}
	
	public Specializations updateCourse(Integer idSpec, Integer idDeg, Integer idCourse, Integer idSemester, String name) {
		Specializations spec = specs.get(idSpec);
		spec.updateCourse(idDeg, idCourse, idSemester, name);
		return spec;
	}
	
	public Specializations updateSemester(Integer idSpec, Integer idDeg, Integer idCourse, Integer idSemester, Integer idListOfRev, String name) {
		Specializations spec = specs.get(idSpec);
		spec.updateSemester(idDeg, idCourse, idSemester, idListOfRev, name);
		return spec;
	}
}
